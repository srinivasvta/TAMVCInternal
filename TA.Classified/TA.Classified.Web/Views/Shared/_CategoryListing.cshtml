@model  IEnumerable<TA.Classified.BLL.ViewModels.CategoryViewModel>


<div class="row">
    <label class="col-sm-offset-1 col-sm-4">
        <h4>View Ads in:</h4>
    </label>
    <div class="col-sm-10 col-sm-offset-1 ">
        @foreach (var category in Model)
        {
            <div class="col-sm-3">
                <a class="category-link" href="@Url.Action("Category","Category",new { categoryName = category.CategoryName})">
                    <img src="@category.CategoryImage" class="image-box" width="180px" height="150px" id="Electronics" />
                </a>
                <h4 class="col-sm-offset-2">@category.CategoryName</h4>
            </div>
        }
    </div>
</div>

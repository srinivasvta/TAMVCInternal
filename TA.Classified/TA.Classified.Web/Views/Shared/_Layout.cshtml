<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="~/Content/CSS/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/CSS/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/CSS/classifiedStyles.css" rel="stylesheet" />
    <link href="~/Content/CSS/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/CSS/jquery-ui.css" rel="stylesheet" />
    
</head>
<body>
    <div class="container">
        <div class="jumbotron">
            <div class="col-sm-4 col-lg-4 col-xs-10">
                <img src="~/Content/Images/company_logo.png" class="img-responsive">
                <!--<img src="images/logo.png" width="585" height="150"> -->
            </div>
            <div class="col-sm-6 col-lg-2 col-xs-4 hidden-xs pull-right header-div">
                <h2 class="title">Classifieds</h2>
            </div>
        </div>
        <nav class="navbar navbar-default" role="navigation">
            <div class="navbar-header mynav">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand visible-xs title" href="#">Classifieds </a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav nav-right">
                    <li class="active">
                        <a href="home.html"><span class="glyphicon glyphicon-home" /> Home</a>
                    </li>
                    <li>
                        <a href="postad.html"><span class="glyphicon glyphicon-tasks alt" /> Post Ad</a>
                    </li>
                    <li><a href="login.html"><span class="glyphicon glyphicon-user"> Login</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["user"] != null)
                    {
                        <li>
                            <a href="myaccount.html"><span class="glyphicon glyphicon-user" /> MyAccount</a>
                        </li>
                    }
                    <li>
                        <a href="contactus.html"><span class="glyphicon glyphicon-earphone" /> Contact Us</a>
                    </li>
                </ul>
            </div>
        </nav>
        @RenderBody()
        <footer class="container text-center">
            <p>2016 Techaspect Solutions</p>
        </footer>
    </div>

    <script src="~/scripts/jquery.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".image-box").on("click", function (event) {
                var selected = "#" + $(this).attr("id");
                $(selected).toggleClass("image-selected");
                $('.image-box').not(this).removeClass('image-selected');
                $(".category").text($(this).attr("id"));
            });
        });
    </script>
</body>
</html>

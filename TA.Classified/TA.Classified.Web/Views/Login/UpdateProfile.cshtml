@model TA.Classified.DataAccess.TAC_User


@using (Html.BeginForm("UpdateProfile", "Login", FormMethod.Post, new { @class = "form-horizontal form-signin form-margin", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>UserRegisterViewModel</h4>
        <hr />
